<div class="pagina">

<div style="position:fixed;padding-left:250px;top:-5px;z-index:99999999;color:white;">
  <h2><b>Edit Cage</b></h2>
</div>

<h1> Edit Cage </h1>

<%= simple_form_for([current_user, @cage]) do |f| %>

<%= f.error_notification %>
<%= f.full_error :confirmation_token %>
                                                                  
 <p><%= f.input :cage_type, :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" },
        :collection => ["Breeding","Injected","Waiting","Need Genotype"] %></p>

 <p><%= f.input :line, :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>

 <p><%= f.input :num_litters, :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" } %></p>

 <p><%= f.input :pups, :label_html => { :class => 'text-right' }, :input_html=> { :class => "form-control" },
        :collection => ["Yes", "No"] %></p>
                                                                              
<%= f.submit :class => "btn btn-success" %>
               
<% end %>

</div>