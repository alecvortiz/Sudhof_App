<% x = "" %>
<% y = "" %>
<% cage_count = 0 %>
<% @cages.order(:line, :cage_type, :created_at).reverse.each do |cage| %>


<% if count == 0 %>
    <% x = cage.line %>
    <h3><%= x %></h3>
    <% count = 1 %>
  <% else %>
    <% y = cage.line %>
    <% if x != y %>
      <h2><%= y %></h2>
      <% x = y %>
    <% end %>
  <% end %>

 <div class="cage">  
 <p><strong><%= cage.line %></strong></p>

