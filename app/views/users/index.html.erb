
<% def inferno() %>
<%  cages = Cage.all %>
<%  cages.each do |cage| %>
<%  if cage.user.nil?  %>
<%    cage.animals.each do |animal| %>
<%        animal.delete %>
<%    end %>
<%  cage.delete %>
<%  end %>
<% end %>
<% end %>
